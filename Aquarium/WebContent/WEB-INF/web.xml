<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>FusionERP</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  
  <servlet>
    <servlet-name>CheckForValidLoginServlet</servlet-name>
    <servlet-class>com.vso.controlers.CheckForValidLoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CheckForValidLoginServlet</servlet-name>
    <url-pattern>/checkforvalidlogin</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>CreateNewUserServlet</servlet-name>
    <servlet-class>com.vso.controlers.CreateNewUserServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CreateNewUserServlet</servlet-name>
    <url-pattern>/createnewuser</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>RedirectToPagesServlet</servlet-name>
    <servlet-class>com.fusionerp.controlers.RedirectToPagesServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RedirectToPagesServlet</servlet-name>
    <url-pattern>/redirect</url-pattern>
  </servlet-mapping> 
</web-app>